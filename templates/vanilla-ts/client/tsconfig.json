{
	"include": ["./**/*.ts", "./**/*.d.ts"],
	"exclude": ["vite.config.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,

		"importsNotUsedAsValues": "error",

		"baseUrl": ".",
		"paths": {
			"@construct/client/*": ["./*"]
		}
	}
}
