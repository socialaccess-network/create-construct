{
	"extends": "@tsconfig/node16/tsconfig.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"noEmit": true
	}
}
